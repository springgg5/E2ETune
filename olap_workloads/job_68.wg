SELECT t.title, COUNT(*) AS num_movies FROM title AS t JOIN movie_companies AS mc ON t.id = mc.movie_id JOIN company_type AS ct ON mc.company_type_id = ct.id WHERE ct.kind = 'production companies' GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_movies DESC;
SELECT n.name, COUNT(*) AS num_roles FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id JOIN role_type AS rt ON ci.role_id = rt.id WHERE rt.role = 'actor' OR rt.role = 'actress' GROUP BY n.name ORDER BY num_roles DESC LIMIT 10;
SELECT k.keyword, COUNT(*) AS num_movies FROM keyword AS k JOIN movie_keyword AS mk ON k.id = mk.keyword_id GROUP BY k.keyword ORDER BY num_movies DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_special_effects_companies FROM title AS t JOIN movie_companies AS mc ON t.id = mc.movie_id JOIN company_type AS ct ON mc.company_type_id = ct.id WHERE ct.kind = 'special effects companies' GROUP BY t.title ORDER BY num_special_effects_companies DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_episodes FROM title AS t WHERE t.kind_id = 7 AND t.episode_of_id IS NOT NULL GROUP BY t.title ORDER BY num_episodes DESC LIMIT 10;
SELECT n.name, COUNT(*) AS num_director_credits FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id JOIN role_type AS rt ON ci.role_id = rt.id WHERE rt.role = 'director' GROUP BY n.name ORDER BY num_director_credits DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_cast_members FROM title AS t JOIN cast_info AS ci ON t.id = ci.movie_id GROUP BY t.title ORDER BY num_cast_members DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_linked_movies FROM title AS t JOIN movie_link AS ml ON t.id = ml.movie_id GROUP BY t.title ORDER BY num_linked_movies DESC LIMIT 10;
SELECT n.name, COUNT(*) AS num_writer_credits FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id JOIN role_type AS rt ON ci.role_id = rt.id WHERE rt.role = 'writer' GROUP BY n.name ORDER BY num_writer_credits DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_misc_companies FROM title AS t JOIN movie_companies AS mc ON t.id = mc.movie_id JOIN company_type AS ct ON mc.company_type_id = ct.id WHERE ct.kind = 'miscellaneous companies' GROUP BY t.title ORDER BY num_misc_companies DESC LIMIT 10;