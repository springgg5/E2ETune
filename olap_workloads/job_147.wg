SELECT cct.kind, COUNT(cc.id) as num_completions, AVG(ci.nr_order) as avg_order FROM complete_cast cc JOIN comp_cast_type cct ON cc.status_id = cct.id JOIN cast_info ci ON cc.movie_id = ci.movie_id WHERE cc.subject_id = 1 AND cct.kind IN ('cast', 'crew', 'complete+verified') GROUP BY cct.kind ORDER BY num_completions DESC;
SELECT cn.name, COUNT(mc.id) as num_movies, SUM(mc.company_type_id) as total_company_type_id FROM char_name cn JOIN cast_info ci ON cn.id = ci.person_id JOIN movie_companies mc ON ci.movie_id = mc.movie_id WHERE cn.surname_pcode IN ('M4323', 'C514', 'W2346') AND mc.note IN ('(2006-) (USA) (TV)', '(2008) (Netherlands) (DVD) (season 5)', '(2002) (USA) (TV)') GROUP BY cn.name HAVING COUNT(mc.id) > 1 ORDER BY num_movies DESC, total_company_type_id ASC;