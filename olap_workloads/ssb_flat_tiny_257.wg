SELECT c_region, c_nation, c_city, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price, AVG(lo_discount) AS avg_discount FROM lineorder_flat WHERE lo_discount IN (5, 8, 3) AND lo_revenue IN (328093, 6954394, 3343924) GROUP BY c_region, c_nation, c_city ORDER BY total_price DESC;
SELECT p_category, p_brand, p_color, SUM(lo_quantity) AS total_quantity, SUM(lo_supplycost) AS total_supplycost FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' OR lo_orderpriority = '2-HIGH' GROUP BY p_category, p_brand, p_color HAVING SUM(lo_quantity) > 1000 ORDER BY total_supplycost DESC;
SELECT s_region, s_nation, s_city, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price, AVG(lo_tax) AS avg_tax FROM lineorder_flat WHERE lo_shipmode = 'AIR' AND lo_commitdate BETWEEN 20220101 AND 20221231 GROUP BY s_region, s_nation, s_city ORDER BY num_orders DESC;
SELECT c_mktsegment, p_mfgr, p_type, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price, AVG(lo_discount) AS avg_discount FROM lineorder_flat WHERE lo_orderdate BETWEEN 20220101 AND 20221231 AND lo_shippriority = 'Y' GROUP BY c_mktsegment, p_mfgr, p_type ORDER BY total_price DESC;
SELECT c_name, c_address, c_phone, SUM(lo_extendedprice) AS total_spent, COUNT(lo_orderkey) AS num_orders FROM lineorder_flat WHERE lo_orderpriority = '5-LOW' AND lo_shipmode = 'RAIL' GROUP BY c_name, c_address, c_phone HAVING COUNT(lo_orderkey) > 10 ORDER BY total_spent DESC;
SELECT p_name, p_size, p_container, SUM(lo_quantity) AS total_quantity, COUNT(lo_orderkey) AS num_orders FROM lineorder_flat WHERE lo_orderdate BETWEEN 20220101 AND 20221231 AND lo_shippriority = 'Y' GROUP BY p_name, p_size, p_container HAVING SUM(lo_quantity) > 500 ORDER BY num_orders DESC;