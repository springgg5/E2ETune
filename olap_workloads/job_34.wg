SELECT k.keyword, COUNT(mk.movie_id) AS movie_count FROM keyword k JOIN movie_keyword mk ON k.id = mk.keyword_id WHERE k.phonetic_code IN ('B6253', 'M536', 'W4316') GROUP BY k.keyword ORDER BY movie_count DESC;
SELECT t.title, COUNT(mc.company_id) AS company_count FROM title t JOIN movie_companies mc ON t.id = mc.movie_id WHERE mc.company_type_id = (SELECT id FROM company_type WHERE kind = 'production') GROUP BY t.title HAVING COUNT(mc.company_id) > 1 ORDER BY company_count DESC;
SELECT cct.kind, COUNT(cc.movie_id) AS movie_count FROM comp_cast_type cct JOIN complete_cast cc ON cct.id = cc.subject_id WHERE cct.id IN (1, 2, 3) GROUP BY cct.kind ORDER BY movie_count DESC;
SELECT n.name, COUNT(ci.movie_id) AS movie_count FROM name n JOIN cast_info ci ON n.id = ci.person_id WHERE ci.role_id = (SELECT id FROM role_type WHERE role = 'actor') GROUP BY n.name HAVING COUNT(ci.movie_id) > 5 ORDER BY movie_count DESC;
SELECT cn.name, COUNT(ci.person_id) AS person_count FROM char_name cn JOIN cast_info ci ON cn.id = ci.person_role_id WHERE ci.role_id = (SELECT id FROM role_type WHERE role = 'actor') GROUP BY cn.name HAVING COUNT(ci.person_id) > 3 ORDER BY person_count DESC;