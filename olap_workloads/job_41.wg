SELECT t.title, COUNT(c.id) AS cast_count, AVG(ci.nr_order) AS avg_order FROM title AS t JOIN cast_info AS ci ON t.id = ci.movie_id JOIN char_name AS c ON ci.person_role_id = c.id WHERE t.production_year >= 2000 AND c.name_pcode_nf IN ('B124', 'C6525', 'L2516') GROUP BY t.title HAVING COUNT(c.id) > 10 ORDER BY avg_order ASC;
SELECT k.keyword, COUNT(mk.movie_id) AS movie_count FROM keyword AS k JOIN movie_keyword AS mk ON k.id = mk.keyword_id WHERE k.phonetic_code IN ('S3625', 'S4236', 'J154') GROUP BY k.keyword HAVING COUNT(mk.movie_id) > 100 ORDER BY movie_count DESC;
SELECT cc.kind, COUNT(cc.id) AS complete_cast_count FROM comp_cast_type AS cc JOIN complete_cast AS c ON cc.id = c.status_id WHERE cc.id IN (3, 2, 4) AND c.movie_id IN (1638983, 19296, 9299) GROUP BY cc.kind HAVING COUNT(c.id) > 1 ORDER BY complete_cast_count DESC;
SELECT n.name, COUNT(pi.id) AS person_info_count FROM name AS n JOIN person_info AS pi ON n.id = pi.person_id WHERE n.gender = 'M' AND pi.info_type_id = 1 GROUP BY n.name HAVING COUNT(pi.id) > 5 ORDER BY person_info_count DESC;