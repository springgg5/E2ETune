SELECT c.c_name, c.c_mktsegment, SUM(lo.lo_revenue) AS total_revenue FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey WHERE c.c_region = 'AMERICA' AND lo.lo_orderdate BETWEEN 19940101 AND 19941231 GROUP BY c.c_name, c.c_mktsegment ORDER BY total_revenue DESC LIMIT 10;
SELECT s.s_name, s.s_region, COUNT(lo.lo_orderkey) AS total_orders, AVG(lo.lo_revenue) AS avg_revenue FROM supplier s JOIN lineorder lo ON s.s_suppkey = lo.lo_suppkey WHERE s.s_region IN ('ASIA', 'MIDDLE EAST') AND lo.lo_orderdate BETWEEN 19920101 AND 19921231 GROUP BY s.s_name, s.s_region ORDER BY total_orders DESC, avg_revenue DESC;
SELECT d.d_yearmonth, SUM(lo.lo_revenue) AS monthly_revenue, COUNT(DISTINCT lo.lo_orderkey) AS num_orders FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate WHERE d.d_year = 1994 AND d.d_lastdayinmonthfl = '1' GROUP BY d.d_yearmonth ORDER BY monthly_revenue DESC;
SELECT p.p_category, p.p_brand, COUNT(lo.lo_orderkey) AS total_orders, SUM(lo.lo_supplycost) AS total_supply_cost FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey WHERE lo.lo_orderpriority = '1-URGENT' OR lo.lo_orderpriority = '2-HIGH' GROUP BY p.p_category, p.p_brand HAVING COUNT(lo.lo_orderkey) > 10 ORDER BY total_supply_cost DESC;