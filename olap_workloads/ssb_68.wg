SELECT p.p_name, p.p_size, COUNT(lo.lo_partkey) AS parts_sold FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey WHERE p.p_size IN (10, 47, 39) GROUP BY p.p_name, p.p_size ORDER BY parts_sold DESC;
SELECT s.s_name, s.s_region, SUM(lo.lo_supplycost) AS total_supply_cost FROM supplier s JOIN lineorder lo ON s.s_suppkey = lo.lo_suppkey WHERE s.s_region IN ('EUROPE', 'AFRICA', 'AMERICA') GROUP BY s.s_name, s.s_region ORDER BY total_supply_cost DESC;
SELECT d.d_month, COUNT(lo.lo_orderkey) AS total_orders FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate WHERE d.d_year = 1993 GROUP BY d.d_month ORDER BY total_orders DESC;
SELECT c.c_mktsegment, COUNT(lo.lo_orderkey) AS total_orders, AVG(lo.lo_revenue) AS avg_revenue FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey GROUP BY c.c_mktsegment ORDER BY total_orders DESC;
SELECT p.p_category, p.p_brand, SUM(lo.lo_quantity) AS total_quantity FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey GROUP BY p.p_category, p.p_brand ORDER BY total_quantity DESC;
SELECT s.s_name, s.s_address, COUNT(lo.lo_orderkey) AS total_orders FROM supplier s JOIN lineorder lo ON s.s_suppkey = lo.lo_suppkey WHERE s.s_name IN ('Supplier#000000592', 'Supplier#000000210', 'Supplier#000000315') GROUP BY s.s_name, s.s_address ORDER BY total_orders DESC;
SELECT d.d_dayofweek, COUNT(lo.lo_orderkey) AS total_orders FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate WHERE d.d_lastdayinweekfl = '1' GROUP BY d.d_dayofweek ORDER BY total_orders DESC;