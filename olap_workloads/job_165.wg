SELECT t.title, COUNT(mk.keyword_id) AS keyword_count FROM title AS t JOIN movie_keyword AS mk ON t.id = mk.movie_id WHERE t.production_year BETWEEN 2000 AND 2010 GROUP BY t.title HAVING COUNT(mk.keyword_id) > 10 ORDER BY keyword_count DESC LIMIT 10;
SELECT n.name, COUNT(ci.person_id) AS appearance_count FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id WHERE ci.role_id = 1 GROUP BY n.name HAVING COUNT(ci.person_id) > 50 ORDER BY appearance_count DESC LIMIT 10;
SELECT t1.title AS original_title, t2.title AS remake_title FROM movie_link AS ml JOIN link_type AS lt ON ml.link_type_id = lt.id JOIN title AS t1 ON ml.movie_id = t1.id JOIN title AS t2 ON ml.linked_movie_id = t2.id WHERE lt.link = 'remade as' AND t1.production_year BETWEEN 1990 AND 2000 ORDER BY t1.production_year ASC, t1.title ASC;