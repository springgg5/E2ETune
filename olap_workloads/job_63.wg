SELECT t.title, COUNT(c.id) AS company_count FROM title AS t JOIN movie_companies AS c ON t.id = c.movie_id WHERE t.production_year >= 2000 GROUP BY t.title HAVING COUNT(c.id) > 1 ORDER BY company_count DESC;
SELECT n.name, COUNT(c.id) AS cast_count FROM name AS n JOIN cast_info AS c ON n.id = c.person_id WHERE n.gender = 'M' GROUP BY n.name HAVING COUNT(c.id) > 5 ORDER BY cast_count DESC;
SELECT k.keyword, COUNT(mk.id) AS keyword_count FROM keyword AS k JOIN movie_keyword AS mk ON k.id = mk.keyword_id GROUP BY k.keyword HAVING COUNT(mk.id) > 10 ORDER BY keyword_count DESC;
SELECT t.title, COUNT(DISTINCT c.person_id) AS actor_count FROM title AS t JOIN cast_info AS c ON t.id = c.movie_id WHERE c.role_id = 1 GROUP BY t.title ORDER BY actor_count DESC;
SELECT n.name, COUNT(DISTINCT ci.movie_id) AS movie_count FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id WHERE ci.role_id = 2 AND n.gender = 'F' GROUP BY n.name ORDER BY movie_count DESC;
SELECT t.title, COUNT(DISTINCT mk.keyword_id) AS keyword_count FROM title AS t JOIN movie_keyword AS mk ON t.id = mk.movie_id WHERE t.production_year >= 2010 GROUP BY t.title ORDER BY keyword_count DESC;
SELECT t.title, COUNT(DISTINCT ml.linked_movie_id) AS linked_movie_count FROM title AS t JOIN movie_link AS ml ON t.id = ml.movie_id GROUP BY t.title HAVING COUNT(DISTINCT ml.linked_movie_id) > 3 ORDER BY linked_movie_count DESC;
SELECT n.name, COUNT(DISTINCT pi.person_id) AS person_info_count FROM name AS n JOIN person_info AS pi ON n.id = pi.person_id WHERE n.gender = 'M' GROUP BY n.name HAVING COUNT(DISTINCT pi.person_id) > 2 ORDER BY person_info_count DESC;