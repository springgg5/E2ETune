SELECT c.c_name, c.c_city, SUM(lo.lo_extendedprice * lo.lo_discount) AS revenue FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey WHERE lo.lo_discount BETWEEN 4 AND 10 AND lo.lo_quantity < 30 GROUP BY c.c_name, c.c_city ORDER BY revenue DESC LIMIT 10;
SELECT p.p_name, p.p_color, p.p_type, COUNT(lo.lo_orderkey) AS total_orders FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey WHERE p.p_color IN ('blanched', 'cornflower', 'dim') AND p.p_container IN ('JUMBO PACK', 'LG CAN', 'LG DRUM') GROUP BY p.p_name, p.p_color, p.p_type HAVING COUNT(lo.lo_orderkey) > 100 ORDER BY total_orders DESC;
SELECT d.d_month, d.d_year, s.s_region, SUM(lo.lo_revenue - lo.lo_supplycost) AS profit FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate JOIN supplier s ON lo.lo_suppkey = s.s_suppkey WHERE d.d_year = 1998 AND s.s_region IN ('AMERICA', 'ASIA', 'EUROPE') GROUP BY d.d_month, d.d_year, s.s_region ORDER BY profit DESC;
SELECT c.c_mktsegment, COUNT(DISTINCT lo.lo_orderkey) AS total_orders, AVG(lo.lo_extendedprice) AS avg_price, SUM(lo.lo_tax) AS total_tax FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey JOIN part p ON lo.lo_partkey = p.p_partkey WHERE lo.lo_shipmode IN ('AIR', 'REG AIR', 'FOB') AND p.p_type LIKE 'PROMO%' GROUP BY c.c_mktsegment HAVING COUNT(DISTINCT lo.lo_orderkey) > 50 ORDER BY total_orders DESC;