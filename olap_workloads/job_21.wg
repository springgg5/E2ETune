SELECT n.name, COUNT(*) AS num_roles FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id WHERE n.gender = 'm' AND ci.role_id IN (SELECT rt.id FROM role_type AS rt WHERE rt.role = 'actor' OR rt.role = 'actress') GROUP BY n.name HAVING COUNT(*) > 10 ORDER BY num_roles DESC;
SELECT p.info AS location, COUNT(*) AS num_people FROM person_info AS p WHERE p.info_type_id IN (38, 26, 22) AND p.info IN ('Hollywood, California, USA', 'Los Angeles, California, USA', 'Switzerland') GROUP BY p.info HAVING COUNT(*) > 5 ORDER BY num_people DESC;
SELECT k.keyword, COUNT(*) AS num_movies FROM keyword AS k JOIN movie_keyword AS mk ON k.id = mk.keyword_id WHERE k.keyword IN ('business-partner', 'patient') GROUP BY k.keyword HAVING COUNT(*) > 1 ORDER BY num_movies DESC;
SELECT t.title, COUNT(*) AS num_cast_members FROM title AS t JOIN cast_info AS ci ON t.id = ci.movie_id WHERE t.production_year BETWEEN 2000 AND 2010 AND ci.role_id IN (SELECT rt.id FROM role_type AS rt WHERE rt.role = 'actor' OR rt.role = 'actress') GROUP BY t.title HAVING COUNT(*) > 5 ORDER BY num_cast_members DESC;