SELECT r.r_name, n.n_name, COUNT(c.c_custkey) AS num_customers, AVG(c.c_acctbal) AS avg_balance FROM region r JOIN nation n ON r.r_regionkey = n.n_regionkey JOIN customer c ON n.n_nationkey = c.c_nationkey WHERE r.r_regionkey IN (2, 3, 4) GROUP BY r.r_name, n.n_name ORDER BY r.r_name, num_customers DESC;
SELECT p.p_brand, p.p_container, COUNT(l.l_orderkey) AS num_orders, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue FROM part p JOIN lineitem l ON p.p_partkey = l.l_partkey WHERE p.p_brand IN ('Brand#13', 'Brand#23', 'Brand#41') AND p.p_container IN ('SM JAR', 'JUMBO DRUM', 'LG DRUM') GROUP BY p.p_brand, p.p_container ORDER BY p.p_brand, total_revenue DESC;
SELECT o.o_orderpriority, COUNT(o.o_orderkey) AS num_orders, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue FROM orders o JOIN lineitem l ON o.o_orderkey = l.l_orderkey WHERE o.o_orderstatus = 'F' AND l.l_shipdate >= o.o_orderdate + INTERVAL '1 month' GROUP BY o.o_orderpriority ORDER BY o.o_orderpriority, total_revenue DESC;
SELECT s.s_name, n.n_name, COUNT(ps.ps_partkey) AS num_parts, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost FROM supplier s JOIN nation n ON s.s_nationkey = n.n_nationkey JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey WHERE n.n_name IN ('UNITED KINGDOM', 'ALGERIA', 'IRAQ') GROUP BY s.s_name, n.n_name HAVING COUNT(ps.ps_partkey) > 100 ORDER BY n.n_name, total_cost DESC;