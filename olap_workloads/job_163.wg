SELECT t.title, COUNT(c.id) AS cast_count FROM title AS t JOIN cast_info AS c ON t.id = c.movie_id WHERE t.production_year >= 2000 GROUP BY t.title HAVING COUNT(c.id) > 10 ORDER BY COUNT(c.id) DESC;
SELECT m.title, k.keyword, COUNT(*) AS keyword_count FROM movie_keyword AS mk JOIN keyword AS k ON mk.keyword_id = k.id JOIN title AS m ON mk.movie_id = m.id WHERE m.production_year >= 2000 GROUP BY m.title, k.keyword ORDER BY keyword_count DESC;
SELECT n.name, COUNT(c.id) AS cast_count FROM name AS n JOIN cast_info AS c ON n.id = c.person_id JOIN title AS t ON c.movie_id = t.id WHERE t.production_year >= 2000 GROUP BY n.name HAVING COUNT(c.id) > 5 ORDER BY COUNT(c.id) DESC;
SELECT t.title, COUNT(ml.id) AS link_count FROM title AS t JOIN movie_link AS ml ON t.id = ml.movie_id WHERE ml.link_type_id IN (4, 9, 11) GROUP BY t.title HAVING COUNT(ml.id) > 2 ORDER BY COUNT(ml.id) DESC;
SELECT t.title, COUNT(mc.id) AS company_count FROM title AS t JOIN movie_companies AS mc ON t.id = mc.movie_id JOIN company_name AS cn ON mc.company_id = cn.id WHERE cn.country_code = 'US' GROUP BY t.title HAVING COUNT(mc.id) > 2 ORDER BY COUNT(mc.id) DESC;
SELECT t.title, mi.info, COUNT(*) AS info_count FROM title AS t JOIN movie_info AS mi ON t.id = mi.movie_id WHERE mi.info_type_id = 4 AND mi.info = 'English' GROUP BY t.title, mi.info HAVING COUNT(*) > 5 ORDER BY COUNT(*) DESC;
SELECT n.name, COUNT(pi.id) AS person_info_count FROM name AS n JOIN person_info AS pi ON n.id = pi.person_id WHERE pi.info_type_id = 4 GROUP BY n.name HAVING COUNT(pi.id) > 2 ORDER BY COUNT(pi.id) DESC;
SELECT t.title, COUNT(DISTINCT c.id) AS distinct_char_count FROM title AS t JOIN cast_info AS ci ON t.id = ci.movie_id JOIN char_name AS c ON ci.person_role_id = c.id WHERE t.production_year >= 2000 GROUP BY t.title HAVING COUNT(DISTINCT c.id) > 5 ORDER BY COUNT(DISTINCT c.id) DESC;
SELECT t.title, COUNT(DISTINCT n.id) AS distinct_name_count FROM title AS t JOIN cast_info AS ci ON t.id = ci.movie_id JOIN name AS n ON ci.person_id = n.id WHERE t.production_year >= 2000 GROUP BY t.title HAVING COUNT(DISTINCT n.id) > 5 ORDER BY COUNT(DISTINCT n.id) DESC;