SELECT c.c_name, c.c_city, c.c_region, SUM(lo.lo_extendedprice * (1 - lo.lo_discount)) AS revenue FROM lineorder lo JOIN customer c ON lo.lo_custkey = c.c_custkey WHERE lo.lo_orderdate >= 19940101 AND lo.lo_orderdate <= 19941231 AND c.c_region = 'AMERICA' GROUP BY c.c_name, c.c_city, c.c_region ORDER BY revenue DESC LIMIT 10;
SELECT p.p_brand, p.p_category, p.p_color, SUM(lo.lo_extendedprice * (1 - lo.lo_discount)) AS revenue FROM lineorder lo JOIN part p ON lo.lo_partkey = p.p_partkey WHERE lo.lo_orderdate >= 19940101 AND lo.lo_orderdate <= 19941231 AND p.p_category IN ('MFGR#12', 'MFGR#35', 'MFGR#21') GROUP BY p.p_brand, p.p_category, p.p_color ORDER BY revenue DESC LIMIT 10;