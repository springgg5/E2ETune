SELECT t.title, COUNT(*) AS num_movies FROM title t JOIN movie_link ml ON t.id = ml.movie_id WHERE ml.link_type_id = (SELECT id FROM link_type WHERE link = 'remade as') GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_movies DESC;
SELECT t.title, COUNT(*) AS num_cast_members FROM title t JOIN cast_info ci ON t.id = ci.movie_id JOIN name n ON ci.person_id = n.id WHERE t.production_year BETWEEN 2000 AND 2020 GROUP BY t.title ORDER BY num_cast_members DESC LIMIT 10;
SELECT t.title, COUNT(*) AS num_keywords FROM title t JOIN movie_keyword mk ON t.id = mk.movie_id JOIN keyword k ON mk.keyword_id = k.id WHERE t.production_year BETWEEN 2000 AND 2020 GROUP BY t.title HAVING COUNT(*) > 10 ORDER BY num_keywords DESC;
SELECT t.title, COUNT(*) AS num_companies_involved FROM title t JOIN movie_companies mc ON t.id = mc.movie_id JOIN company_name cn ON mc.company_id = cn.id WHERE t.production_year BETWEEN 2000 AND 2020 GROUP BY t.title HAVING COUNT(*) > 5 ORDER BY num_companies_involved DESC;
SELECT t.title, COUNT(*) AS num_alternate_titles FROM title t JOIN aka_title at ON t.id = at.movie_id WHERE at.imdb_index IN ('I', 'II') AND at.note IN ('(Hong Kong: Cantonese title)', '(USA) (informal English title)', '(Germany) (festival title)') GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_alternate_titles DESC;
SELECT t.title, COUNT(*) AS num_complete_casts FROM title t JOIN complete_cast cc ON t.id = cc.movie_id WHERE cc.status_id IN (3, 4) AND cc.movie_id IN (1663821, 1662237, 19632) GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_complete_casts DESC;
SELECT t.title, COUNT(*) AS num_movie_links FROM title t JOIN movie_link ml ON t.id = ml.movie_id WHERE ml.link_type_id IN (3, 2, 11) AND ml.linked_movie_id IN (2012989, 1091, 2006899) GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_movie_links DESC;