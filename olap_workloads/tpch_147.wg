SELECT c.c_name, SUM(o.o_totalprice) AS total_spent FROM customer c JOIN orders o ON c.c_custkey = o.o_custkey WHERE c.c_nationkey IN (5, 15, 22) AND c.c_mktsegment = 'FURNITURE' GROUP BY c.c_name ORDER BY total_spent DESC LIMIT 10;
SELECT p.p_name, p.p_partkey, SUM(ps.ps_availqty) AS total_avail_qty FROM part p JOIN partsupp ps ON p.p_partkey = ps.ps_partkey WHERE p.p_size BETWEEN 10 AND 50 AND ps.ps_comment LIKE '%PwR%' GROUP BY p.p_name, p.p_partkey HAVING SUM(ps.ps_availqty) > 10000 ORDER BY total_avail_qty DESC;
SELECT o.o_orderpriority, COUNT(*) as priority_count, AVG(l.l_extendedprice * (1 - l.l_discount)) as average_revenue FROM orders o JOIN lineitem l ON o.o_orderkey = l.l_orderkey WHERE l.l_shipmode IN ('AIR', 'RAIL') AND l.l_returnflag = 'R' GROUP BY o.o_orderpriority ORDER BY average_revenue DESC;