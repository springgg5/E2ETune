SELECT t.title, COUNT(*) as num_movies FROM title t JOIN movie_keyword mk ON t.id = mk.movie_id JOIN keyword k ON mk.keyword_id = k.id WHERE k.keyword = 'action' GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_movies DESC;
SELECT n.name, COUNT(*) as num_roles FROM name n JOIN cast_info ci ON n.id = ci.person_id JOIN role_type rt ON ci.role_id = rt.id WHERE rt.role = 'actor' GROUP BY n.name HAVING COUNT(*) > 10 ORDER BY num_roles DESC;
SELECT c.name, COUNT(*) as num_movies FROM company_name c JOIN movie_companies mc ON c.id = mc.company_id JOIN title t ON mc.movie_id = t.id WHERE t.kind_id = 1 GROUP BY c.name HAVING COUNT(*) > 5 ORDER BY num_movies DESC;
SELECT t.title, COUNT(*) as num_episodes FROM title t JOIN title e ON t.id = e.episode_of_id WHERE t.kind_id = 2 AND e.kind_id = 3 GROUP BY t.title HAVING COUNT(*) > 10 ORDER BY num_episodes DESC;
SELECT n.name, COUNT(*) as num_directed_movies FROM name n JOIN cast_info ci ON n.id = ci.person_id JOIN role_type rt ON ci.role_id = rt.id JOIN title t ON ci.movie_id = t.id WHERE rt.role = 'director' GROUP BY n.name HAVING COUNT(*) > 5 ORDER BY num_directed_movies DESC;
SELECT k.keyword, COUNT(*) as num_movies FROM keyword k JOIN movie_keyword mk ON k.id = mk.keyword_id JOIN title t ON mk.movie_id = t.id WHERE t.production_year BETWEEN 2000 AND 2010 GROUP BY k.keyword HAVING COUNT(*) > 10 ORDER BY num_movies DESC;
SELECT n.name, COUNT(*) as num_written_movies FROM name n JOIN cast_info ci ON n.id = ci.person_id JOIN role_type rt ON ci.role_id = rt.id JOIN title t ON ci.movie_id = t.id WHERE rt.role = 'writer' GROUP BY n.name HAVING COUNT(*) > 5 ORDER BY num_written_movies DESC;
SELECT t.title, COUNT(*) as num_cast_members FROM title t JOIN cast_info ci ON t.id = ci.movie_id JOIN name n ON ci.person_id = n.id WHERE t.production_year = 2000 GROUP BY t.title HAVING COUNT(*) > 10 ORDER BY num_cast_members DESC;
SELECT t.title, COUNT(*) as num_links FROM title t JOIN movie_link ml ON t.id = ml.movie_id JOIN link_type lt ON ml.link_type_id = lt.id WHERE lt.link = 'follows' GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_links DESC;