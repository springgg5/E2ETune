SELECT c_city, c_nation, SUM(lo_extendedprice * (1 - lo_discount)) AS revenue FROM lineorder_flat WHERE lo_orderdate >= 19940101 AND lo_orderdate <= 19941231 AND p_type = 'ECONOMY POLISHED STEEL' GROUP BY c_city, c_nation ORDER BY revenue DESC;
SELECT s_name, s_city, s_nation, SUM(lo_supplycost * lo_quantity) AS total_supply_cost FROM lineorder_flat WHERE lo_orderdate >= 19940101 AND lo_orderdate <= 19941231 AND c_phone = '31-793-700-8830' GROUP BY s_name, s_city, s_nation ORDER BY total_supply_cost DESC;
SELECT p_category, p_brand, p_color, AVG(lo_quantity) AS avg_quantity, AVG(lo_extendedprice) AS avg_price, AVG(lo_discount) AS avg_discount FROM lineorder_flat WHERE lo_orderdate >= 19940101 AND lo_orderdate <= 19941231 AND p_type = 'SMALL PLATED NICKEL' GROUP BY p_category, p_brand, p_color ORDER BY p_category, p_brand, p_color;