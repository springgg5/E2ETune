SELECT title.title, kind_type.kind, COUNT(movie_keyword.keyword_id) AS keyword_count FROM title INNER JOIN kind_type ON title.kind_id = kind_type.id INNER JOIN movie_keyword ON title.id = movie_keyword.movie_id WHERE kind_type.kind = 'movie' AND title.production_year > 2000 GROUP BY title.title, kind_type.kind HAVING COUNT(movie_keyword.keyword_id) > 10 ORDER BY keyword_count DESC;
SELECT company_name.name, company_type.kind, COUNT(movie_companies.movie_id) AS movie_count FROM company_name INNER JOIN company_type ON company_name.id = company_type.id INNER JOIN movie_companies ON company_name.id = movie_companies.company_id WHERE company_type.kind = 'production companies' AND movie_companies.company_type_id = 3 GROUP BY company_name.name, company_type.kind HAVING COUNT(movie_companies.movie_id) > 50 ORDER BY movie_count DESC;
SELECT name.name, COUNT(cast_info.movie_id) AS movie_count FROM name INNER JOIN cast_info ON name.id = cast_info.person_id INNER JOIN role_type ON cast_info.role_id = role_type.id WHERE name.gender = 'm' AND name.surname_pcode = 'A164' AND role_type.role = 'actor' GROUP BY name.name HAVING COUNT(cast_info.movie_id) > 10 ORDER BY movie_count DESC;
SELECT title.title, COUNT(movie_link.linked_movie_id) AS linked_movie_count FROM title INNER JOIN movie_link ON title.id = movie_link.movie_id INNER JOIN link_type ON movie_link.link_type_id = link_type.id WHERE link_type.link = 'spin off from' GROUP BY title.title HAVING COUNT(movie_link.linked_movie_id) > 5 ORDER BY linked_movie_count DESC;