SELECT c.c_name, d.d_date, SUM(lo.lo_extendedprice * (1 - lo.lo_discount)) AS revenue FROM lineorder lo JOIN customer c ON lo.lo_custkey = c.c_custkey JOIN date_dim d ON lo.lo_orderdate = d.d_datekey WHERE lo.lo_discount BETWEEN 5 AND 10 AND d.d_year = 2020 GROUP BY c.c_name, d.d_date ORDER BY revenue DESC;
SELECT p.p_name, p.p_size, SUM(lo.lo_quantity) AS total_quantity FROM lineorder lo JOIN part p ON lo.lo_partkey = p.p_partkey WHERE p.p_size IN (21, 47, 14) AND p.p_mfgr = 'MFGR#2' GROUP BY p.p_name, p.p_size ORDER BY total_quantity DESC;
SELECT s.s_name, s.s_region, COUNT(lo.lo_orderkey) AS total_orders FROM lineorder lo JOIN supplier s ON lo.lo_suppkey = s.s_suppkey WHERE lo.lo_orderpriority = 'HIGH' AND lo.lo_shipmode = 'AIR' GROUP BY s.s_name, s.s_region ORDER BY total_orders DESC;
SELECT c.c_name, c.c_mktsegment, AVG(lo.lo_revenue) AS avg_revenue FROM lineorder lo JOIN customer c ON lo.lo_custkey = c.c_custkey WHERE lo.lo_custkey IN (71326, 234539, 275240) GROUP BY c.c_name, c.c_mktsegment HAVING AVG(lo.lo_revenue) > 1000000 ORDER BY avg_revenue DESC;
SELECT d.d_month, SUM(lo.lo_supplycost) AS total_supply_cost, SUM(lo.lo_tax) AS total_tax FROM lineorder lo JOIN date_dim d ON lo.lo_commitdate = d.d_datekey WHERE d.d_year = 2020 AND lo.lo_shipmode = 'RAIL' GROUP BY d.d_month ORDER BY total_supply_cost DESC;
SELECT p.p_category, p.p_brand, COUNT(lo.lo_orderkey) AS total_orders, SUM(lo.lo_extendedprice) AS total_extended_price FROM lineorder lo JOIN part p ON lo.lo_partkey = p.p_partkey WHERE lo.lo_orderpriority = 'LOW' AND lo.lo_discount IN (7, 10, 5) GROUP BY p.p_category, p.p_brand HAVING COUNT(lo.lo_orderkey) > 1000 ORDER BY total_extended_price DESC;