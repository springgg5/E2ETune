SELECT title.title, COUNT(movie_keyword.keyword_id) AS keyword_count FROM title JOIN movie_keyword ON title.id = movie_keyword.movie_id WHERE movie_keyword.keyword_id IN (6, 499, 163) GROUP BY title.title ORDER BY keyword_count DESC LIMIT 10;
SELECT company_name.name, COUNT(movie_companies.movie_id) AS movie_count FROM company_name JOIN movie_companies ON company_name.id = movie_companies.company_id WHERE movie_companies.company_type_id = 4 GROUP BY company_name.name ORDER BY movie_count DESC LIMIT 10;
SELECT title.title, COUNT(movie_link.linked_movie_id) AS linked_movies_count FROM title JOIN movie_link ON title.id = movie_link.movie_id WHERE movie_link.link_type_id IN (8, 3, 4) GROUP BY title.title ORDER BY linked_movies_count DESC LIMIT 10;
SELECT comp_cast_type.kind, COUNT(complete_cast.movie_id) AS movie_count FROM comp_cast_type JOIN complete_cast ON comp_cast_type.id = complete_cast.status_id WHERE comp_cast_type.id IN (3, 4, 2) GROUP BY comp_cast_type.kind ORDER BY movie_count DESC;
SELECT title.title, AVG(cast_info.nr_order) AS avg_order FROM title JOIN cast_info ON title.id = cast_info.movie_id GROUP BY title.title HAVING COUNT(cast_info.person_id) > 5 ORDER BY avg_order DESC LIMIT 10;
SELECT title.title, COUNT(movie_info.id) AS info_count FROM title JOIN movie_info ON title.id = movie_info.movie_id WHERE movie_info.info_type_id = 4 GROUP BY title.title ORDER BY info_count DESC LIMIT 10;
SELECT name.name, COUNT(cast_info.person_id) AS roles_count FROM name JOIN cast_info ON name.id = cast_info.person_id WHERE cast_info.role_id IN (SELECT role_type.id FROM role_type WHERE role_type.role LIKE 'actor%') GROUP BY name.name ORDER BY roles_count DESC LIMIT 10;