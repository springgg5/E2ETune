SELECT s_region, COUNT(lo_orderkey) AS total_orders, SUM(lo_extendedprice) AS total_revenue FROM lineorder_flat WHERE lo_orderdate >= 20200101 AND lo_orderdate <= 20201231 GROUP BY s_region ORDER BY total_revenue DESC;
SELECT s_nation, p_category, AVG(lo_quantity) AS avg_quantity, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' OR lo_orderpriority = '2-HIGH' GROUP BY s_nation, p_category ORDER BY s_nation, avg_price DESC;
SELECT c_name, c_city, c_nation, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_commitdate >= 20200101 AND lo_commitdate <= 20201231 AND s_region = 'AMERICA' GROUP BY c_name, c_city, c_nation ORDER BY total_revenue DESC LIMIT 10;
SELECT p_brand, p_type, p_size, COUNT(lo_orderkey) AS total_orders, SUM(lo_supplycost) AS total_supply_cost FROM lineorder_flat WHERE lo_shipmode = 'AIR' AND lo_orderdate >= 20200101 AND lo_orderdate <= 20201231 GROUP BY p_brand, p_type, p_size ORDER BY total_supply_cost DESC;
SELECT s_name, s_city, s_nation, COUNT(lo_orderkey) AS total_orders, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_suppkey IN (8360, 2298, 687) AND lo_orderdate >= 20200101 AND lo_orderdate <= 20201231 GROUP BY s_name, s_city, s_nation ORDER BY total_revenue DESC;
SELECT c_mktsegment, COUNT(lo_orderkey) AS total_orders, SUM(lo_extendedprice) AS total_revenue, AVG(lo_discount) AS avg_discount FROM lineorder_flat WHERE lo_orderdate >= 20200101 AND lo_orderdate <= 20201231 GROUP BY c_mktsegment ORDER BY total_revenue DESC;
SELECT s_nation, p_category, COUNT(lo_orderkey) AS total_orders, SUM(lo_extendedprice * (1 - lo_discount)) AS total_discounted_revenue FROM lineorder_flat WHERE s_region = 'MIDDLE EAST' AND lo_orderdate >= 20200101 AND lo_orderdate <= 20201231 GROUP BY s_nation, p_category ORDER BY total_discounted_revenue DESC;