SELECT c_region, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' GROUP BY c_region ORDER BY num_orders DESC;
SELECT p_category, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue, AVG(lo_revenue) AS avg_revenue FROM lineorder_flat WHERE lo_orderdate BETWEEN 20210101 AND 20211231 GROUP BY p_category ORDER BY total_revenue DESC;
SELECT s_name, COUNT(lo_orderkey) AS num_orders, SUM(lo_supplycost) AS total_supply_cost, AVG(lo_supplycost) AS avg_supply_cost FROM lineorder_flat WHERE lo_shipmode = 'AIR' AND lo_commitdate BETWEEN 20210101 AND 20211231 GROUP BY s_name ORDER BY total_supply_cost DESC;
SELECT c_mktsegment, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice * (1 - lo_discount)) AS total_discounted_price, AVG(lo_extendedprice * (1 - lo_discount)) AS avg_discounted_price FROM lineorder_flat WHERE lo_orderdate BETWEEN 20210101 AND 20211231 GROUP BY c_mktsegment ORDER BY total_discounted_price DESC;
SELECT p_name, COUNT(lo_orderkey) AS num_orders, SUM(lo_quantity) AS total_quantity, AVG(lo_quantity) AS avg_quantity FROM lineorder_flat WHERE p_name IN ('azure metallic', 'orange chartreuse', 'ivory smoke') GROUP BY p_name ORDER BY total_quantity DESC;
SELECT c_city, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue, AVG(lo_revenue) AS avg_revenue FROM lineorder_flat WHERE lo_orderpriority = '5-LOW' AND lo_orderdate BETWEEN 20210101 AND 20211231 GROUP BY c_city ORDER BY total_revenue DESC;
SELECT s_nation, COUNT(lo_orderkey) AS num_orders, SUM(lo_tax) AS total_tax, AVG(lo_tax) AS avg_tax FROM lineorder_flat WHERE lo_shipmode = 'RAIL' AND lo_commitdate BETWEEN 20210101 AND 20211231 GROUP BY s_nation ORDER BY total_tax DESC;
SELECT p_brand, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat WHERE lo_supplycost IN (67873, 67452, 67813) GROUP BY p_brand ORDER BY total_price DESC;