SELECT kt.kind, COUNT(*) as movie_count FROM title t JOIN kind_type kt ON t.kind_id = kt.id WHERE t.production_year >= 2000 GROUP BY kt.kind ORDER BY movie_count DESC;
SELECT n.name, COUNT(*) as total_movies FROM name n JOIN cast_info ci ON n.id = ci.person_id JOIN title t ON ci.movie_id = t.id WHERE t.production_year >= 2000 AND ci.role_id = 1 GROUP BY n.name ORDER BY total_movies DESC LIMIT 10;
SELECT t.title, COUNT(*) as total_keywords FROM title t JOIN movie_keyword mk ON t.id = mk.movie_id JOIN keyword k ON mk.keyword_id = k.id WHERE t.production_year >= 2000 GROUP BY t.title ORDER BY total_keywords DESC LIMIT 10;
SELECT cn.name, COUNT(*) as total_appearances FROM char_name cn JOIN cast_info ci ON cn.id = ci.person_role_id JOIN title t ON ci.movie_id = t.id WHERE t.production_year >= 2000 AND ci.role_id = 3 GROUP BY cn.name ORDER BY total_appearances DESC LIMIT 10;
SELECT comp.name, COUNT(*) as total_movies FROM company_name comp JOIN movie_companies mc ON comp.id = mc.company_id JOIN title t ON mc.movie_id = t.id WHERE t.production_year >= 2000 AND mc.company_type_id = 1 GROUP BY comp.name ORDER BY total_movies DESC LIMIT 10;
SELECT AVG(production_year) as average_production_year, kind_type.kind FROM title JOIN kind_type ON title.kind_id = kind_type.id WHERE production_year IS NOT NULL GROUP BY kind_type.kind;
SELECT t.title, COUNT(*) as total_cast_members FROM title t JOIN cast_info ci ON t.id = ci.movie_id JOIN comp_cast_type cct ON ci.role_id = cct.id WHERE cct.kind = 'cast' GROUP BY t.title HAVING COUNT(*) > 10 ORDER BY total_cast_members DESC LIMIT 10;