SELECT c.c_name, c.c_city, c.c_region, SUM(lo_extendedprice * (1 - lo_discount)) AS revenue FROM lineorder lo JOIN customer c ON lo.lo_custkey = c.c_custkey JOIN date_dim d ON lo.lo_orderdate = d.d_datekey WHERE d.d_year = 1993 AND d.d_weeknuminyear = 27 AND c.c_nation = 'PERU' GROUP BY c.c_name, c.c_city, c.c_region ORDER BY revenue DESC;
SELECT p.p_category, p.p_brand, p.p_mfgr, SUM(lo_quantity) AS total_quantity, AVG(lo_extendedprice) AS avg_extendedprice, COUNT(DISTINCT lo_orderkey) AS num_orders FROM lineorder lo JOIN part p ON lo.lo_partkey = p.p_partkey JOIN supplier s ON lo.lo_suppkey = s.s_suppkey JOIN date_dim d ON lo.lo_orderdate = d.d_datekey WHERE d.d_year = 1994 AND d.d_month = 'June' AND s.s_city = 'KENYA 2' GROUP BY p.p_category, p.p_brand, p.p_mfgr ORDER BY total_quantity DESC, avg_extendedprice DESC;