SELECT name.name, role_type.role, COUNT(cast_info.movie_id) as movie_count, AVG(title.production_year) as average_production_year FROM name JOIN cast_info ON name.id = cast_info.person_id JOIN role_type ON cast_info.role_id = role_type.id JOIN title ON cast_info.movie_id = title.id WHERE role_type.role IN ('actor', 'actress', 'director') GROUP BY name.name, role_type.role HAVING COUNT(cast_info.movie_id) > 5 ORDER BY average_production_year DESC;
SELECT company_name.name, company_type.kind, COUNT(movie_companies.movie_id) as movie_count, AVG(title.production_year) as average_production_year FROM company_name JOIN movie_companies ON company_name.id = movie_companies.company_id JOIN company_type ON movie_companies.company_type_id = company_type.id JOIN title ON movie_companies.movie_id = title.id WHERE company_type.kind IN ('production', 'distribution', 'special effects') GROUP BY company_name.name, company_type.kind HAVING COUNT(movie_companies.movie_id) > 10 ORDER BY average_production_year DESC;