SELECT t.title, COUNT(*) AS num_movies FROM title AS t JOIN movie_info AS mi ON t.id = mi.movie_id WHERE mi.info_type_id = 4 AND mi.info = 'English' GROUP BY t.title HAVING COUNT(*) > 1 ORDER BY num_movies DESC;
SELECT kt.kind, COUNT(*) AS num_movies FROM kind_type AS kt JOIN title AS t ON kt.id = t.kind_id JOIN movie_info AS mi ON t.id = mi.movie_id WHERE mi.info_type_id = 4 AND mi.info = 'English' GROUP BY kt.kind ORDER BY num_movies DESC;
SELECT n.name, COUNT(*) AS num_roles FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id JOIN role_type AS rt ON ci.role_id = rt.id WHERE rt.role = 'actor' OR rt.role = 'actress' GROUP BY n.name HAVING COUNT(*) > 10 ORDER BY num_roles DESC;
SELECT k.keyword, COUNT(*) AS num_movies FROM keyword AS k JOIN movie_keyword AS mk ON k.id = mk.keyword_id JOIN title AS t ON mk.movie_id = t.id WHERE t.production_year >= 2000 AND t.production_year <= 2020 GROUP BY k.keyword HAVING COUNT(*) > 5 ORDER BY num_movies DESC;
SELECT cn.name, COUNT(*) AS num_characters FROM char_name AS cn JOIN cast_info AS ci ON cn.id = ci.person_role_id JOIN title AS t ON ci.movie_id = t.id WHERE t.production_year >= 2000 AND t.production_year <= 2020 GROUP BY cn.name HAVING COUNT(*) > 5 ORDER BY num_characters DESC;
SELECT mi.info, AVG(mi2.info::float) AS avg_rating FROM movie_info AS mi JOIN movie_info_idx AS mi2 ON mi.movie_id = mi2.movie_id WHERE mi.info_type_id = 4 AND mi.info = 'English' AND mi2.info_type_id = 101 GROUP BY mi.info HAVING COUNT(*) > 10 ORDER BY avg_rating DESC;
SELECT n.name, COUNT(*) AS num_movies, AVG(mi2.info::float) AS avg_rating FROM name AS n JOIN cast_info AS ci ON n.id = ci.person_id JOIN movie_info_idx AS mi2 ON ci.movie_id = mi2.movie_id WHERE mi2.info_type_id = 101 GROUP BY n.name HAVING COUNT(*) > 5 ORDER BY avg_rating DESC;