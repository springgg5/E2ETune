SELECT c_region, COUNT(*) AS num_orders, SUM(lo_extendedprice) AS total_sales FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' GROUP BY c_region ORDER BY total_sales DESC;
SELECT p_category, AVG(lo_quantity) AS avg_quantity, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat WHERE lo_shipmode = 'AIR' AND lo_orderdate BETWEEN 20220101 AND 20220131 GROUP BY p_category ORDER BY avg_quantity DESC;
SELECT s_name, COUNT(*) AS num_orders, SUM(lo_supplycost) AS total_supply_cost FROM lineorder_flat WHERE lo_commitdate BETWEEN 20220101 AND 20220131 AND p_size IN (34, 24, 18) GROUP BY s_name HAVING COUNT(*) > 10 ORDER BY total_supply_cost DESC;
SELECT c_city, p_brand, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE p_color IN ('blush', 'black', 'dark') AND lo_discount BETWEEN 5 AND 15 GROUP BY c_city, p_brand ORDER BY total_revenue DESC;
SELECT s_nation, p_type, COUNT(*) AS num_orders FROM lineorder_flat WHERE lo_orderdate BETWEEN 20220101 AND 20220131 AND s_name IN ('Supplier#000009357', 'Supplier#000005358', 'Supplier#000002793') GROUP BY s_nation, p_type ORDER BY num_orders DESC;
SELECT c_mktsegment, p_container, AVG(lo_tax) AS avg_tax FROM lineorder_flat WHERE lo_orderpriority IN ('2-HIGH', '3-MEDIUM', '4-LOW') GROUP BY c_mktsegment, p_container HAVING COUNT(*) > 10 ORDER BY avg_tax DESC;
SELECT s_region, p_mfgr, SUM(lo_extendedprice * (1 - lo_discount)) AS total_sales_after_discount FROM lineorder_flat WHERE lo_shippriority = '0' AND lo_orderdate BETWEEN 20220101 AND 20220131 GROUP BY s_region, p_mfgr ORDER BY total_sales_after_discount DESC;
SELECT c_nation, p_category, COUNT(DISTINCT lo_orderkey) AS num_distinct_orders FROM lineorder_flat WHERE lo_orderdate BETWEEN 20220101 AND 20220131 AND lo_shipmode IN ('RAIL', 'SHIP') GROUP BY c_nation, p_category ORDER BY num_distinct_orders DESC;