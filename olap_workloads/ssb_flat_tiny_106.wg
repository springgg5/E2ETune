SELECT c_nation, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_revenue FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' AND lo_shipmode = 'AIR' GROUP BY c_nation ORDER BY total_revenue DESC;
SELECT p_type, p_color, SUM(lo_quantity) AS total_quantity, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat WHERE lo_orderdate >= '20220101' AND lo_orderdate <= '20221231' GROUP BY p_type, p_color HAVING SUM(lo_quantity) > 1000 ORDER BY total_quantity DESC;
SELECT c_city, c_nation, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_orderpriority = '5-LOW' AND lo_shipmode = 'RAIL' AND c_nation IN ('ETHIOPIA', 'ROMANIA', 'IRAN') GROUP BY c_city, c_nation ORDER BY total_revenue DESC;
SELECT s_name, s_city, s_nation, SUM(lo_supplycost) AS total_supply_cost FROM lineorder_flat WHERE p_category = 'BRASS' AND p_brand = 'LARGE BURNISHED BRASS' GROUP BY s_name, s_city, s_nation ORDER BY total_supply_cost DESC;
SELECT c_mktsegment, p_mfgr, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_revenue FROM lineorder_flat WHERE lo_orderdate >= '20220101' AND lo_orderdate <= '20221231' AND p_type = 'PROMO PLATED STEEL' GROUP BY c_mktsegment, p_mfgr ORDER BY total_revenue DESC;
SELECT c_region, p_category, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_orderpriority = '3-MEDIUM' AND lo_shipmode = 'TRUCK' AND p_color IN ('magenta', 'brown', 'medium') GROUP BY c_region, p_category ORDER BY total_revenue DESC;
SELECT c_name, c_address, c_phone, SUM(lo_ordtotalprice) AS total_order_price FROM lineorder_flat WHERE lo_orderdate >= '20220101' AND lo_orderdate <= '20221231' AND lo_linenumber IN (4, 7, 1) GROUP BY c_name, c_address, c_phone HAVING SUM(lo_ordtotalprice) > 100000 ORDER BY total_order_price DESC;