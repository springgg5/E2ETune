SELECT c_region, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' GROUP BY c_region ORDER BY num_orders DESC;
SELECT p_category, AVG(lo_quantity) AS avg_quantity, AVG(lo_extendedprice) AS avg_price FROM lineorder_flat GROUP BY p_category ORDER BY avg_quantity DESC;
SELECT s_nation, p_brand, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_orderpriority = '2-HIGH' AND lo_shipmode = 'AIR' GROUP BY s_nation, p_brand ORDER BY total_revenue DESC;
SELECT c_city, p_type, SUM(lo_supplycost) AS total_supply_cost FROM lineorder_flat WHERE lo_commitdate BETWEEN 20220101 AND 20220131 GROUP BY c_city, p_type ORDER BY total_supply_cost DESC;
SELECT c_mktsegment, COUNT(lo_orderkey) AS num_orders, SUM(lo_tax) AS total_tax FROM lineorder_flat WHERE lo_orderpriority = '3-MEDIUM' AND lo_shipmode = 'RAIL' GROUP BY c_mktsegment ORDER BY num_orders DESC;
SELECT s_region, p_category, COUNT(lo_orderkey) AS num_orders, SUM(lo_revenue) AS total_revenue FROM lineorder_flat WHERE lo_orderpriority = '1-URGENT' AND lo_shipmode = 'TRUCK' GROUP BY s_region, p_category ORDER BY total_revenue DESC;
SELECT c_nation, p_mfgr, COUNT(lo_orderkey) AS num_orders, SUM(lo_ordtotalprice) AS total_price FROM lineorder_flat WHERE lo_orderpriority = '2-HIGH' AND lo_shipmode = 'SHIP' GROUP BY c_nation, p_mfgr ORDER BY total_price DESC;
SELECT c_city, s_city, COUNT(lo_orderkey) AS num_orders, SUM(lo_extendedprice) AS total_price FROM lineorder_flat WHERE lo_orderpriority = '3-MEDIUM' AND lo_shipmode = 'AIR' AND c_address LIKE 'ftrswIgrJ9nI%' GROUP BY c_city, s_city ORDER BY num_orders DESC;