SELECT c.c_nation, COUNT(lo.lo_orderkey) AS order_count, SUM(lo.lo_extendedprice) AS total_revenue FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey WHERE c.c_nation IN ('EGYPT', 'MOZAMBIQUE', 'UNITED KINGDOM') GROUP BY c.c_nation ORDER BY total_revenue DESC;
SELECT p.p_brand, p.p_category, AVG(lo.lo_quantity) AS average_quantity, COUNT(lo.lo_orderkey) AS order_count FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey WHERE p.p_brand IN ('MFGR#4324', 'MFGR#5217', 'MFGR#1134') AND p.p_category IN ('MFGR#42', 'MFGR#31', 'MFGR#32') GROUP BY p.p_brand, p.p_category ORDER BY average_quantity DESC;
SELECT d.d_year, d.d_month, SUM(lo.lo_revenue) AS monthly_revenue FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate WHERE d.d_year BETWEEN 1995 AND 1998 GROUP BY d.d_year, d.d_month ORDER BY d.d_year, d.d_month;
SELECT c.c_name, c.c_phone, SUM(lo.lo_extendedprice * (1 - lo.lo_discount)) AS total_discounted_price FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey WHERE c.c_name IN ('Customer#000169437', 'Customer#000170141', 'Customer#000169567') GROUP BY c.c_name, c.c_phone ORDER BY total_discounted_price DESC;
SELECT s.s_name, s.s_nation, COUNT(lo.lo_orderkey) AS order_count, SUM(lo.lo_supplycost) AS total_supplycost FROM supplier s JOIN lineorder lo ON s.s_suppkey = lo.lo_suppkey WHERE s.s_nation IN ('EGYPT', 'MOZAMBIQUE', 'UNITED KINGDOM') GROUP BY s.s_name, s.s_nation ORDER BY total_supplycost DESC;
SELECT c.c_mktsegment, COUNT(lo.lo_orderkey) AS order_count, SUM(lo.lo_revenue) AS total_revenue FROM customer c JOIN lineorder lo ON c.c_custkey = lo.lo_custkey GROUP BY c.c_mktsegment HAVING COUNT(lo.lo_orderkey) > 1000 ORDER BY total_revenue DESC;
SELECT p.p_type, COUNT(lo.lo_orderkey) AS order_count, SUM(lo.lo_extendedprice) AS total_price FROM part p JOIN lineorder lo ON p.p_partkey = lo.lo_partkey WHERE p.p_type IN ('LARGE BURNISHED COPPER', 'PROMO POLISHED TIN', 'PROMO BRUSHED NICKEL') GROUP BY p.p_type ORDER BY total_price DESC;
SELECT d.d_dayofweek, COUNT(lo.lo_orderkey) AS order_count, SUM(lo.lo_extendedprice) AS total_revenue FROM date_dim d JOIN lineorder lo ON d.d_datekey = lo.lo_orderdate WHERE d.d_dayofweek IN ('Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday') AND lo.lo_orderpriority = '1-URGENT' GROUP BY d.d_dayofweek ORDER BY total_revenue DESC;