SELECT company_name.name, COUNT(movie_id) AS num_movies FROM movie_companies JOIN company_name ON movie_companies.company_id = company_name.id WHERE company_type_id = 1 GROUP BY company_name.name ORDER BY num_movies DESC LIMIT 10;
SELECT title.title, COUNT(keyword_id) AS num_keywords FROM movie_keyword JOIN title ON movie_keyword.movie_id = title.id GROUP BY title.title ORDER BY num_keywords DESC LIMIT 10;
SELECT name.name, COUNT(person_id) AS num_movies FROM cast_info JOIN name ON cast_info.person_id = name.id WHERE role_id = 1 GROUP BY name.name ORDER BY num_movies DESC LIMIT 10;
SELECT title.title, AVG(movie_info.info::numeric) AS average_rating FROM movie_info JOIN title ON movie_info.movie_id = title.id WHERE movie_info.info_type_id = 101 GROUP BY title.title HAVING AVG(movie_info.info::numeric) >= 8 ORDER BY average_rating DESC LIMIT 10;
SELECT name.name, COUNT(movie_id) AS num_movies FROM cast_info JOIN name ON cast_info.person_id = name.id WHERE role_id = 2 AND movie_id IN (SELECT movie_id FROM movie_info WHERE info_type_id = 3 AND info = 'English') GROUP BY name.name ORDER BY num_movies DESC LIMIT 10;
SELECT title.title, COUNT(movie_id) AS num_actors FROM cast_info JOIN title ON cast_info.movie_id = title.id WHERE role_id = 1 GROUP BY title.title HAVING COUNT(movie_id) >= 50 ORDER BY num_actors DESC LIMIT 10;
SELECT company_name.name, COUNT(movie_id) AS num_movies FROM movie_companies JOIN company_name ON movie_companies.company_id = company_name.id WHERE company_type_id = 4 AND movie_id IN (SELECT movie_id FROM movie_info WHERE info_type_id = 3 AND info = 'English') GROUP BY company_name.name ORDER BY num_movies DESC LIMIT 10;
SELECT title.title, COUNT(linked_movie_id) AS num_linked_movies FROM movie_link JOIN title ON movie_link.movie_id = title.id WHERE link_type_id = 7 GROUP BY title.title ORDER BY num_linked_movies DESC LIMIT 10;
SELECT name.name, COUNT(person_id) AS num_movies FROM cast_info JOIN name ON cast_info.person_id = name.id WHERE role_id = 3 AND movie_id IN (SELECT movie_id FROM movie_info WHERE info_type_id = 3 AND info = 'English') GROUP BY name.name ORDER BY num_movies DESC LIMIT 10;
SELECT title.title, COUNT(keyword_id) AS num_keywords FROM movie_keyword JOIN title ON movie_keyword.movie_id = title.id WHERE movie_id IN (SELECT movie_id FROM movie_info WHERE info_type_id = 3 AND info = 'English') GROUP BY title.title HAVING COUNT(keyword_id) >= 10 ORDER BY num_keywords DESC LIMIT 10;